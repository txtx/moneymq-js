{
  "name": "moneymq-js",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "description": "MoneyMQ JavaScript SDK for accepting stablecoin payments",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/txtx/moneymq-js.git"
  },
  "homepage": "https://github.com/txtx/moneymq-js#readme",
  "bugs": {
    "url": "https://github.com/txtx/moneymq-js/issues"
  },
  "license": "MIT",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "prepublishOnly": "pnpm build",
    "version": "node scripts/sync-versions.js && git add packages/*/package.json",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18"
  }
}
