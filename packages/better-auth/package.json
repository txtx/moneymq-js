{
  "name": "@moneymq/better-auth",
  "version": "0.6.0",
  "description": "Better Auth plugin for MoneyMQ stablecoin payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/txtx/moneymq-js.git",
    "directory": "packages/better-auth"
  },
  "keywords": [
    "moneymq",
    "better-auth",
    "authentication",
    "payments",
    "stablecoin",
    "usdc",
    "subscriptions"
  ],
  "author": "MoneyMQ",
  "license": "MIT",
  "dependencies": {
    "@moneymq/sdk": "workspace:*"
  },
  "peerDependencies": {
    "better-auth": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "better-auth": "^1.2.8",
    "tsup": "^8.0.0",
    "typescript": "^5"
  }
}
